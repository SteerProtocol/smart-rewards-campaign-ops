{
  "name": "smart-rewards-campaign-ops",
  "version": "1.0.0",
  "description": "Smart Rewards Campaign Operations - TypeScript client for managing campaign operations, rewards calculation, and on-chain claims",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "cli": "ts-node src/cli/smart-rewards-cli.ts",
    "prestart": "yarn build"
  },
  "keywords": [
    "smart-rewards",
    "campaigns",
    "defi",
    "ethereum",
    "typescript",
    "graphql",
    "merkle-proofs",
    "claims"
  ],
  "author": "Steer Protocol",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SteerProtocol/smart-rewards.git",
    "directory": "utils/campaign-ops"
  },
  "bugs": {
    "url": "https://github.com/SteerProtocol/smart-rewards/issues"
  },
  "homepage": "https://github.com/SteerProtocol/smart-rewards#readme"
}
